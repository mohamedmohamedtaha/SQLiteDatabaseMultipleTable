<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manasatt.sqlitedatabasewithmultipletables.MainActivity">

    <Button
        android:id="@+id/tagBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Tag"
        android:textAllCaps="false"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/tagET"
        android:layout_marginTop="18dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="saveTAG"/>

    <EditText
        android:id="@+id/tagET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name Tag"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:id="@+id/view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/todoET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name Todo"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="72dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="72dp" />

    <Button
        android:id="@+id/todoBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Todo"
        android:textAllCaps="false"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/todoET"
        android:layout_marginTop="33dp"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:onClick="saveTODO"/>

    <Button
        android:id="@+id/getListTodoBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get List Todo"
        android:textAllCaps="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:onClick="getListTodo"
        app:layout_constraintBaseline_toBaselineOf="@+id/todoBT" />

    <Button
        android:id="@+id/getListTagBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get List Tag"
        android:textAllCaps="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/tagBT"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/tagBT"
        android:onClick="getListTag"
        android:layout_marginRight="-7dp" />
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="@+id/todoBT"
        android:layout_marginTop="50dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:id="@+id/view2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <Button
        android:id="@+id/getListTODOTAG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get List TODO and TAG"
        android:textAllCaps="false"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="@+id/getListTodoBT"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="4dp"
        android:onClick="getListTodoTag"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="@+id/view2"
        tools:layout_constraintRight_creator="1"
        android:layout_marginLeft="8dp"
        />
</android.support.constraint.ConstraintLayout>
